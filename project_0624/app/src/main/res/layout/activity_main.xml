<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.project_0624.MainActivity"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/home_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:scaleType="fitCenter"
                    android:src="@drawable/foodtruck2" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/nationSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"></Spinner>

                <Spinner
                    android:id="@+id/tagSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"></Spinner>

                <Button
                    android:id="@+id/search_button"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="검색" />

            </LinearLayout>

            <!--<ListView-->
            <!--android:id="@+id/list2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->


            <RelativeLayout
                android:id="@+id/firstPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical"

                >


                <ImageButton
                    android:id="@+id/france"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="5dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/food1" />

                <ImageButton
                    android:id="@+id/uk"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/france"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food3" />

                <ImageButton
                    android:id="@+id/germany"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/uk"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/berlin" />

                <ImageButton
                    android:id="@+id/espana"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/germany"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/barcelona" />

                <ImageButton
                    android:id="@+id/portugal"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/espana"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/lisbon" />

                <ImageButton
                    android:id="@+id/czech"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/portugal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/praha" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
